<section class="module">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <h4 class="font-alt m-t-0 m-b-0">Update Music Event</h4>
        <hr class="divider-w m-t-10 m-b-20">
        <div class="form-group">
          <%= form_tag "/jams/#{@jam.id}", method: :patch do %>
          <div>
            <input class="form-control" type="text" placeholder="Fill out all fields before creating/editing" readonly>
          </div>
          <div class="form-group">
            <%= text_field_tag :name, @jam.name, class: "form-control input-lg" %>
          </div>

          <div class="form-group">
            <%= text_field_tag :venue, @jam.venue, class: "form-control input-lg" %>
          </div>

          <div class="form-group">
            <%= date_field_tag :date, @jam.date, class: "form-control input-lg" %>
          </div>
          <div class="form-group">
            <%= time_field_tag :time, @jam.time, class: "form-control input-lg" %>
          </div>

          <div class="form-group">
            <%= text_area_tag :summary, @jam.summary, class: "form-control input-lg" %>
          </div>

          <div class="form-group">
            <%= text_field_tag :address, @jam.address, class: "form-control input-lg" %>
          </div>

          <div>
            <h4 style="font-family:Montserrat;">Desired Instruments:</h4>
            <ul>
              <% @instruments.each do |instrument| %>
                <li>
                  <%= instrument.name %>
                  <select name="instruments[<%=instrument.id%>]">
                    <option value="0">none</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                  </select>
                </li>
              <% end %>
            </ul>
          </div>
          <h4 style="font-family:Montserrat;">Desired Genres:</h4>
          <div>
            <% @genres.each do |genre| %>
              <%= check_box_tag "genres[]", genre.id, checked = JamGenre.exists?(jam_id: @jam.id, genre_id: genre.id) %>
              <%= genre.name %>
            <% end %>
          </div>
          <hr>
          <div>
            <button type="submit" class="btn btn-success btn-round">Edit Event</button>
          </div>

          <% end %>
        </div>        
      </div>
    </div>
  </div>
</section>

