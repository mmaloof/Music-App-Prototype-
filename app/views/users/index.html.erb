<hr>

<!-- PORTFOLIO LIST -->
<ul id="works-grid" class="works-grid works-grid-3 works-hover-w">
<% @users.each do |user| %>
  <!-- PORTFOLIO ITEM -->
  <li class="work-item illustration webdesign">
    <a href="/users/<%= user.id %>">
      <div class="work-image center-cropped">
        <%= image_tag user.avatar.url, class: "user-image" %>
      </div>
      <div class="work-caption">
        <h3 class="work-title font-alt"><%= user.username %></h3>
        <div class="work-descr font-inc">
          Profile
        </div>
      </div>
    </a>
  </li>
  <!-- /PORTFOLIO ITEM -->
<% end %>
</ul>
<!-- /PORTFOLIO LIST -->

