  <div class="wrapper">

    <!-- PORTFOLIO DESCRIPTION -->
    <section class="module-small">

      <div class="container">

        <div class="row">

          <div class="col-sm-6">

            <div class="work-details">
              <%= image_tag @user.avatar.url(:medium) %>
              <h4 class="work-details-title font-alt"><%= @user.username %></h4>
              <ul>
                <li class="font-inc"><strong>Name: </strong><%= @user.first_name%> <%= @user.last_name %></li>
                <li class="font-inc"><strong>Birthdate: </strong><%= @user.birthdate %></li>
                <li class="font-inc"><strong>City and Neighborhood: </strong><%= @user.area %></li>
              </ul>
            </div>

          </div>

          <div class="col-sm-6">
            <p><strong>Bio: </strong><%= @user.bio %></p>
            <p><strong>Favorite/Important Artists: </strong><%= @user.artists %></p>
            <p><strong>Instruments: </strong>
               <ul>
               <% @user.instruments.each do |instrument| %>
                 <li>
                    <%= instrument.name %>
                 </li>
               <% end %>
              </ul>
            </p>

            <p><strong>Genres: </strong>
               <ul>
               <% @user.genres.each do |genre| %>
                 <li>
                    <%= genre.name %>
                 </li>
               <% end %>
              </ul>
            </p>
          </div>

        </div>

      </div>

<% if current_user.id == @user.id %>
  <a href="/users/<%= @user.id %>/edit"><button type="button" class="btn btn-success btn-round">Update</button></a>
<% end %>

    </section>

    <!-- /PORTFOLIO DESCRIPTION -->
